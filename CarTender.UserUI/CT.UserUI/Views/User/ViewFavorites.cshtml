
@{
    ViewBag.Title = "Favorilerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    <!-- Favicon -->
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/Scripts/main.js"></script>
</head>
</div>
<div class="container-fluid mb-5">
    <h2 class="text-center">@ViewBag.Title</h2>
    <div>
        <div class="card">
            <div id="collapseTwo" class="collapse show p-3 container" aria-labelledby="headingTwo" data-parent="#accordion">
                <div class="row mt-3 ">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group">
                                <input class="form-control mr-sm-2" type="search" placeholder="Araç Ara" aria-label="Ara">
                                <button class="btn btn-outline-success " type="submit">Ara</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-3 container" style="border:2px solid gray; border-radius: .35rem;">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Araç Bilgileri</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Hyundai Kona 2020 1.4 TSI AT Siyah</td>
                                <td>
                                    <a class="btn btn-warning col-md-5" data-toggle="modal" data-target="#editUserFavoriteCar" href="#"><i class="fa-solid fa-pen-to-square" style="color:black;"></i> Araca Git</a>
                                    <button type="button" class="btn btn-danger col-md-5" id="myInput" data-bs-toggle="modal" data-bs-target="#deleteUserFavoriteCar"><i class="far fa-trash-alt"></i> Favorilerden Çıkar</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Opel Corsa 2018 1.2 MT Mavi</td>
                                <td>
                                    <a class="btn btn-warning col-md-5" data-toggle="modal" data-target="#editUserFavoriteCar" href="#"><i class="fa-solid fa-pen-to-square" style="color:black;"></i> Araca Git</a>
                                    <button type="button" class="btn btn-danger col-md-5" id="myInput" data-bs-toggle="modal" data-bs-target="#deleteUserFavoriteCar"><i class="far fa-trash-alt"></i> Favorilerden Çıkar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
